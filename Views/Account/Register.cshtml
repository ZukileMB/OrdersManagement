@model Hermes.Models.ViewModels.Account.RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <section>
        <div class="row d-flex justify-content-center col-12">
            <div class="d-flex justify-content-center">
                <h1 class="h3 mb-3 font-weight-normal">Please Register </h1>
            </div>

            <form id="registerdiv" action="/Account/Register" method="post" enctype="multipart/form-data">

                @if (!ViewData.ModelState.IsValid)
                {
                    foreach (Microsoft.AspNetCore.Mvc.ModelBinding.ModelError error in ViewData.ModelState.Values.SelectMany(x => x.Errors))
                    {
                        <div>
                            <span class="text-danger">@error.ErrorMessage </span>
                        </div>
                        <p></p>
                        break;
                    }
                }

                <div class="form-group">
                    <label asp-for="@Model.Username" class="col-lg-3 control-label"></label>
                    <br>
                    <div class="col-lg-9">
                        @Html.TextBoxFor(m => m.Username, new { placeholder = "Username", @class = "form-control" })
                    </div>
                </div>

                <div class="form-group col-sm-12">
                    <label asp-for="@Model.Email" class="col-lg-3 control-label"></label>
                    <br>
                    <div class="col-lg-9">
                        @Html.TextBoxFor(m => m.Email, new { placeholder = "Email", @class = "form-control" })
                    </div>
                </div>

                <div class="form-group col-sm-12">
                    <label asp-for="@Model.PhoneNumber" class="col-lg-3 control-label"></label>
                    <br>
                    <div class="col-lg-9">
                        @Html.TextBoxFor(m => m.PhoneNumber, new { placeholder = "Phone Number", @class = "form-control" })
                    </div>
                </div>

                <div class="form-group col-sm-12">
                    <label asp-for="@Model.Password" class="col-lg-3 control-label"></label>
                    <br>
                    <div class="col-lg-9">
                        @Html.PasswordFor(m => m.Password, new { placeholder = "Password", @class = "form-control" })
                    </div>
                </div>

                <div class="form-group col-sm-12">
                    <label asp-for="@Model.ConfirmPassword" class="col-lg-3 control-label"></label>
                    <br>
                    <div class="col-lg-9">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { placeholder = "Confirm Password", @class = "form-control" })
                    </div>
                </div>

                <div class="form-group">
                    <br>
                    <div class="col-sm-12 btn-submit">
                        <button type="submit" class="btn btn-success">Sign Up</button>

                    </div>
                </div>
            </form>
        </div>
    </section>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}